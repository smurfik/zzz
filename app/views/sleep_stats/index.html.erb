<table border="5" width="100%">
  <tr>
    <th colspan="3">
      <h3><br>Zzz Stats</h3>
    </th>
  </tr>
  <tr>
    <th>Date</th>
    <th>Hours Slept</th>
    <th>Delete</th>
  </tr>
  <% @stats.each do |stat| %>
    <tr>
      <td><%= stat.clean_time%></td>
      <td><%= stat.hours %></td>
      <td><%= form_tag "sleep-stats/#{stat.id}", method: "DELETE" do %>
        <%= submit_tag "Delete", data: { confirm: "Are you sure?" } %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<div>
  <% if @stat %>
    <% @stat.errors.each do |column, message| %>
      <div><strong># of <%= column %> <%= message %></strong></div>
    <% end %>
  <% end %>
</div>

<div>
  <h2>Add Hours Slept</h2>
  <%= form_tag "/sleep-stats" do %>
    <%= label_tag "# of hours"%>
    <%= text_field_tag :hours, nil, placeholder: "hours slept" %>
    <%= submit_tag "Add" %>
  <% end %>
</div>
